{
    "env": {
        "browser": true,
        "es2021": true,
        "react-native/react-native": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "airbnb/hooks"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native"
    ],
    "rules": {
        // Disable no-unused-vars for a specific line
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "^_" // Ignore variables starting with underscore
            }
        ],
        "react/react-in-jsx-scope": "off"
    }
}